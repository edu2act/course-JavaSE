		//求每个同学的平均分
		HashMap<Integer, Integer> hm=CharStream.getAvgScore();
		Set keys=hm.keySet();
		//用一个迭代器遍历数据
		Iterator i=keys.iterator();
		while(i.hasNext()){
			Integer key=(Integer)i.next();
			Integer value=hm.get(key);
			System.out.println("学号"+key+",分数"+value);
		}
//		try{
